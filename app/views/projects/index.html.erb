<h1><%= t('Listing projects') %></h1>

<table>
  <tr>
    <th><%= t('Name') %></th>
    <th><%= t('Description') %></th>
    <th><%= t('Project') %></th>
    <th colspan="3"><%= t('Actions') %></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.description %></td>
    <td><%= project.project %></td>
    <td><%= link_to t('Show'), project %></td>
    <td><%= link_to t('Edit'), edit_project_path(project) %></td>
    <td><%= link_to t('Destroy'), project, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

