<h1><%= t('Listing activities') %></h1>

<table>
  <tr>
    <th><%= t('Name') %></th>
    <th><%= t('Description') %></th>
    <th colspan="3"><%= t('Actions') %></th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%= activity.name %></td>
    <td><%= activity.description %></td>
    <%= render :partial => 'default/actions', :locals=>{:object => activity}%>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('New Activity'), new_activity_path %>
