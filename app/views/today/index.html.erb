<h1><%= t('.title') %></h1>
<%= render 'start_stop_form' %>
<div id="page-content">
	<div id="tracking" class="page-part">
		<h2><%= t('.started_activities') %></h2>
		<button onclick="javascript:$('sidebar').toggle();$('tracking').toggleClassName('maximized');"><%= t('.toggle_sidebar') %></button>
		<table>
			<thead>
				<tr>
					<th><%= Datetime.human_attribute_name 'activity' %></th>
					<th><%= Datetime.human_attribute_name 'start' %></th>
					<th><%= Datetime.human_attribute_name 'stop' %></th>
					<th><%= Datetime.human_attribute_name 'spent_time' %></th>
					<th><%= Datetime.human_attribute_name 'tags' %></th>
					<th colspan="4"><%= t('default.actions.actions') %></th>
				</tr>
			</thead>
			<tbody>
			<%= render(@datetimes, :locals => {:datetime_format => @datetime_format}) %>
			</tbody>
		</table>
	</div>
	<div id="sidebar" class="page-part">
		<%= render 'tag_cloud' %>
	</div>
</div>