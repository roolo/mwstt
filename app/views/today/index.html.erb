<h1><%= t('Today') %></h1>
<%= render 'start_stop_form' %>
<div id="page-content">
	<div id="tracking" class="page-part">
		<h2><%= t('Today started activities') %></h2>
		<button onclick="javascript:$('sidebar').toggle();$('tracking').toggleClassName('maximized');"><%= t('Toggle sidebar') %></button>
		<table>
			<thead>
				<tr>
					<th><%= t('Activity') %></th>
					<th><%= t('From') %></th>
					<th><%= t('To') %></th>
					<th><%= t('Tags') %></th>
					<th colspan="3"><%= t('Actions') %></th>
				</tr>
			</thead>
			<tbody>
                          <% @datetimes.each do |activity_name, datetimes| %>
                          <tr>
                            <td rowspan="<%= datetimes.count %>" class="activity-name"><%= activity_name %></td>
                            <%= raw datetimes.collect { |datetime| render :partial => 'start_stop_cells', :locals => {:datetime => datetime} }.join %>
                          </tr>
                          <% end %>
			</tbody>
		</table>
	</div>
	<div id="sidebar" class="page-part">
		<%= render 'tag_cloud' %>
	</div>
</div>